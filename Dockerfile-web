FROM node:22.20.0@sha256:eb37f58646a901dc7727cf448cae36daaefaba79de33b5058dab79aa4c04aefb

ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable

VOLUME ["/pnpm/store"]
VOLUME ["/web/node_modules"]
VOLUME ["/web"]
VOLUME ["/web/.pnpm-store"]

WORKDIR /web

CMD ["sh", "-c", "pnpm install --frozen-lockfile; pnpm run build; node dist/index.js"]
