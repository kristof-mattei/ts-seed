FROM node:22.20.0@sha256:4973262386dc1cb70f7d6fc48a855027d8f12d2d3b1fe559b9db9a4fcb74668f

ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable

VOLUME ["/pnpm/store"]
VOLUME ["/web/node_modules"]
VOLUME ["/web"]
VOLUME ["/web/.pnpm-store"]

WORKDIR /web

CMD ["sh", "-c", "pnpm install --frozen-lockfile; pnpm run build; node dist/index.js"]
