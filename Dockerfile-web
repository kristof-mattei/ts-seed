FROM node:22.19.0@sha256:d6ba961be11a08d00369a01dec7566fc8f2dd895a8edd5b983915123f0e81c63

ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable

VOLUME ["/pnpm/store"]
VOLUME ["/web/node_modules"]
VOLUME ["/web"]
VOLUME ["/web/.pnpm-store"]

WORKDIR /web

CMD ["sh", "-c", "pnpm install --frozen-lockfile; pnpm run build; node dist/index.js"]
