FROM node:22.17.0@sha256:5307f5fb05ee67123776f256ae011ed167c7ca1270f021f798290222fec13649

ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable

VOLUME ["/pnpm/store"]
VOLUME ["/web/node_modules"]
VOLUME ["/web"]
VOLUME ["/web/.pnpm-store"]

WORKDIR /web

CMD ["sh", "-c", "pnpm install --frozen-lockfile; pnpm run build; node dist/index.js"]
