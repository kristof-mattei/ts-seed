    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**/*.js",
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "API_PORT": "3000",
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Docker Web",
            "address": "localhost",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**/*.js",
            ],
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/web/",
            "env": {
                "API_PORT": "3000"
            }
        }
    ]
}
